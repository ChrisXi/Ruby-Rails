<p id="notice"><%= notice %></p>


<div class="container">
  <h1>Listing Users</h1>
  <div class="media">
    <div class="media-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Password</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.password %></td>
              <td><%= link_to 'Show', user, class: 'btn btn-mini btn-info' %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-mini btn-success' %></td>
              <td><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
  <%= link_to 'New User', new_user_path %>
</div>

